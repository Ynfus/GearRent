@model ComplaintViewModel

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Formularz Reklamacji</h2>

            @if (TempData["messageSent"] != null && (bool)TempData["messageSent"])
            {
                <div id="sent-message" class="alert alert-success mt-2">Wiadomość została wysłana!</div>
                TempData["messageSent"] = null;
            }

            <form method="post">
                <div class="form-group">
                    <label for="fullName">Imię i nazwisko / nazwa firmy*</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" required>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="email">E-mail*</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="phone">Telefon</label>
                    <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{9}" title="Wprowadź poprawny numer telefonu (9 cyfr)" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="reservationNumber">Numer rezerwacji</label>
                    <input type="text" class="form-control" id="reservationNumber" name="reservationNumber" pattern="[0-9]{0,8}" title="Numer rezerwacji może zawierać maksymalnie 8 cyfr.">
                    <span asp-validation-for="ReservationNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="complaintDescription">Opis reklamacji*</label>
                    <textarea class="form-control" id="complaintDescription" name="complaintDescription" rows="4" required></textarea>
                    <span asp-validation-for="ComplaintDescription" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary mt-4">WYŚLIJ</button>
                </div>

            </form>
        </div>
    </div>
</div>
