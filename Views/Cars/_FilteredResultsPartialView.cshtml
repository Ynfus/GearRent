@using GearRent.PaginatedList;
@model PaginatedList<GearRent.Models.Car>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@foreach (var car in Model)
{
    <div class="col-12 car-item">
        <div class="row">
            <div class="col-md-6">
                <img src="@car.PhotoLink" class="car-image" />
            </div>
            <div class="col-md-6">
                <div class="car-details mt-3">
                    <h5>@car.Make @car.Model</h5>
                    <p>@car.Year</p>
                    <div class="car-icons mt-3">

                        <div class="icon ">
                            <img src="~/engineicon.svg" alt="Engine Icon">
                            <h4>@car.EngineSize</h4>
                        </div>
                        <div class="icon ">
                            <img src="~/fuel.svg" alt="Seats Icon">
                            <h4>@car.FuelType</h4>
                        </div>
                        <div class="icon mt-2">
                            <img src="~/acceleration.svg" alt="Engine Icon">
                            <h4>@car.Acceleration</h4>
                        </div>
                        <div class="icon mt-2">
                            <img src="~/fuelUsage.svg" alt="Seats Icon">
                            <h4>@car.FuelConsumption</h4>
                        </div>
                        <div class="icon mt-2">
                            <img src="~/seats.svg" alt="Engine Icon">
                            <h4>@car.NumberOfSeats</h4>
                        </div>
                        <div class="icon mt-2">
                            <img src="~/seats.svg" alt="Seats Icon">
                            <h4>@car.NumberOfSeats</h4>
                        </div>
                        @*                                <img src="~/fuel.svg" alt="Fuel Icon">
                    <h4>@car.Fuel;</h4>*@
                    </div>
                    <div class="mt-3">
@*                        <a href="@Url.Action("Details", "Cars", new { id = car.Id })" class="btn btn-primary">Szczegóły</a>
*@                        <a href="" id="order-link-@car.Id" class="btn btn-primary order-link" data-car-id="@car.Id">Order</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
}