@using GearRent.PaginatedList;
@model PaginatedList<GearRent.Models.Car>

@{
    ViewData["Title"] = "List";
}
<style>

</style>

<div class="container mt-3">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10 car-grid ">
            @foreach (var car in Model)
            {
                <div class="col-12 car-item">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@car.PhotoLink" class="car-image" />
                        </div>
                        <div class="col-md-6">
                            <div class="car-details mt-3">
                                <h5>@car.Make @car.Model</h5>
                                <p>@car.Year</p>
                                <div class="car-icons mt-3">

                                    <div class="icon ">
                                        <img src="~/engineicon.svg" alt="Engine Icon">
                                        <h4>@car.EngineSize</h4>
                                    </div>
                                    <div class="icon ">
                                        <img src="~/fuel.svg" alt="Seats Icon">
                                        <h4>@car.FuelType</h4>
                                    </div>
                                    <div class="icon mt-2">
                                        <img src="~/acceleration.svg" alt="Engine Icon">
                                        <h4>@car.Acceleration</h4>
                                    </div>
                                    <div class="icon mt-2">
                                        <img src="~/fuelUsage.svg" alt="Seats Icon">
                                        <h4>@car.FuelConsumption</h4>
                                    </div>
                                    <div class="icon mt-2">
                                        <img src="~/seats.svg" alt="Engine Icon">
                                        <h4>@car.NumberOfSeats</h4>
                                    </div>
                                    <div class="icon mt-2">
                                        <img src="~/seats.svg" alt="Seats Icon">
                                        <h4>@car.NumberOfSeats</h4>
                                    </div>
                                    @*                                <img src="~/fuel.svg" alt="Fuel Icon">
                                <h4>@car.Fuel;</h4>*@
                                </div>
                                <div class="mt-3">
                                    <a href="@Url.Action("Details", "Cars", new { id = car.Id })" class="btn btn-primary">Szczegóły</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div class="d-flex justify-content-center">
    <a asp-action="List"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="List"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-default @nextDisabled">
        Next
    </a>
</div>